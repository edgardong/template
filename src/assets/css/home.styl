@import './variable'
.ick-home
  width 100%
  margin-top 0.64rem
  .ick-home__tabs
    height 0.4rem
    line-height 0.4rem
    border-bottom 1px solid #eee
    .center
      text-align center
      .tab-item
        display inline-block
        position relative
        padding 0 0.05rem
        box-sizing border-box
        color #333
        font-size 0.15rem
        &.active
          color $basicColor
          &::after
            content ""
            position absolute
            left 0
            bottom -1px
            z-index 1
            width 100%
            height 4px
            transform scaleY(.5)
            background $basicColor
