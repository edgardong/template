.ick-musicsearch
  .input-wrapper
    position relative
    padding .1rem .15rem
    border-top 1px solid #ebebeb
    border-bottom 1px solid #ebebeb
    .input-cover
      position relative
      width 100%
      height .3rem
      padding 0 .3rem
      box-sizing border-box
      background #ebecec
      border-radius .3rem
      .icon-sousuo
        position absolute
        left 0
        top .03rem
        margin 0 .08rem
        vertical-align middle
        color #999
      .icon-guanbi1
        position absolute
        top .03rem
        right 0
        margin 0 0.08rem
        vertical-align middle
        color #999999
      .search
        width 100%
        outline none
        height .3rem
        line-height .18rem
        background transparent
        font-size .14rem
        color #333
        border-radius 0
        border 0
  .hots-wrapper
    padding .15rem .1rem 0
  .search-title
    font-size .12rem
    line-height .12rem
    color #666
  .hot-items
    margin .1rem 0 .07rem
    .hot-item
      display inline-block
      height .32rem
      margin-right .08rem
      margin-bottom .08rem
      padding 0 .14rem
      font-size .14rem
      line-height .32rem
      color #333
      border-radius .32rem
      border 1px solid #ebebeb
  .ick-searchlist
    .search-item
      justify-content space-between
      height .45rem
      .search-left
        padding-right .2rem
        flex 1
        height 100%
        justify-content space-between
        border-bottom 1px solid #ebebeb
      .iconfont-left
        margin 0 .1rem
        color rgba(0,0,0,0.3)
      .search-name
        display inline-block
        flex 1 1 auto
        height 100%
        display flex
        align-items center
      .iconfont-right
        color rgba(0,0,0,0.3)
        font-size .22rem
        z-index 9999
  .ick-search__suggest
    .suggest-main
      height .5rem
      margin-left .1rem
      padding-right .1rem
      font-size .15rem
      line-height .5rem
      color #507daf
      border-bottom 1px solid #ebebeb
    .suggest-item
      display flex
      align-items center
      height .45rem
      padding-left .10rem
      .iconfont
        margin-right .07rem
      .item-name
        display inline-block
        flex 1
        width 1%
        padding-right .1rem
        font-size .15rem
        line-height .45rem
        color #333
        border-bottom 1px solid #ebebeb
  .ick-searchresult
    .result-item
      margin-left .1rem
      color #333333
      border-bottom 1px solid #ebebeb
      .result-wrapper
        padding .06rem 0
        width 0
        flex 1 1 auto
        .result-name
          color #507daf
          font-size .17rem
        .result-info
          font-size .12rem
          color #888
          .sq
            display inline-block
            width .12rem
            height .08rem
            margin-right .04rem
            background url(../images/index_icon_2x.png) no-repeat
            background-size 1.66rem .97rem
      .player
        display flex
        align-items center
        padding 0 .1rem
        .player-icon
          display inline-block
          width .22rem
          height .22rem
          background url(../images/index_icon_2x.png) no-repeat
          background-size 1.66rem .97rem
          background-position -.24rem 0

