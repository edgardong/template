@import 'keyframes.styl'
.ick-musicdetail
  background-repeat no-repeat
  background-position 50%
  background-size auto 100%
  transform scale(1.5)
  transform-origin center top
  transition: opacity .3s linear
  opacity 1
  z-index -1
  width 100%
  height 100%
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  filter blur(.2rem);
  &::after
    content " "
    position absolute
    left 0
    right 0
    bottom 0
    top 0
    background-color rgba(0,0,0,.5)
.music-wrapper
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  overflow hidden
  z-index 9999
  .ick-music__contorl
  .ick-logo
    position absolute
    top .12rem
    left .1rem
    height .17rem
    font-size .14rem
    line-height 0
    color #ffffff
    .logo-img
      display inline-block
      height .17rem
      width .17rem
      border-radius .06rem
      margin-right .06rem
  .song-wrapper
    margin-top .7rem
    .song-disc
      position relative
      width 2.96rem
      height 2.96rem
      margin 0 auto
      &::after
        position absolute
        content ''
        width .96rem
        height 1.37rem
        top -.7rem
        left 1.33rem
        background url(../images/needle-ip6.png) no-repeat
        background-size contain
        z-index 999
      .song-turn
        position relative
        width 100%
        height 100%
        display flex
        align-items center
        justify-content center
        &::before
          content " "
          position absolute
          left 0
          right 0
          top 0
          bottom 0
          z-index 20
          background url(../images/disc-ip6.png) no-repeat
          background-size contain
          background-image url(../images/disc-ip6.png)
        .song-img
          border-radius 50%
          width 1.84rem
          height 1.84rem
          z-index -1
          overflow hidden
          background url(../images/disc_default.png) no-repeat
          background-size contain
          .u-img
            width 100%
            vertical-align middle
        .player
          position absolute
          left 0
          right 0
          top 0
          bottom 0
          justify-content center
          .icon-player          
            font-size .6rem
            color #ffffff
            z-index 20
  .ick-music__info
    padding 0 .35rem
    margin-top .25rem
    text-align center
    .music-name_author
      font-size .18rem
      line-height 1.1
      color #fefefe
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
    .ick-music__lyric
      margin-top .14rem
      display block
      height .5rem
      overflow hidden
      .lyric-scroll
        transition transform 0.5s
        .music-lyric
          font-size .16rem
          line-height 1.5
          padding-bottom .06rem
          color: hsla(0,0%,100%,.6)
          &.current
            color #61dafb
  .ick-music__timeline
    margin 0.2rem 0.08rem
    .time
      display inline-block
      text-align center
      color #fff
      width .35rem
    .time-line
      position relative
      height .01rem
      width 100%
      background-color #fff
      margin 0 .1rem
      .time-line__current
        position absolute
        height .01rem
        top 0
        bottom 0
        left 0
        width 100%
        background-color #61dafb
  .ick-music__control
    display flex
    align-items center
    .iconfont
      font-size .5rem
      flex 1
      text-align center
    .iconfont-small
      font-size .4rem
      color: rgba(255,255,255,.5)
    .iconfont-center
      color rgba(255,255,255,0.8)