.ick-recommend
  margin-top  0.2rem
  .remd_songs
    flex-wrap wrap
    padding-bottom  .24rem
    align-items flex-start
    justify-content space-between
    .remd_item
      position relative
      width 33%
      padding-bottom 0.16rem
      .remd_count
        position absolute
        right 0.05rem
        top .02rem
        z-index 3
        padding-left .13rem
        color #fff
        font-size .12rem
        background-position 0
        background-repeat no-repeat
        background-size .11rem .1rem
        text-shadow .01rem 0 0 rgba(0,0,0,.15)
      .remd_img
        width 1.23rem
        height 1.23rem
    .remd_desc
      display -webkit-box
      -webkit-line-clamp 2
      -webkit-box-orient vertical
      overflow hidden
      padding .06rem .02rem 0 .06rem
      line-height 1.2
      font-size .13rem
